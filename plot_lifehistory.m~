

data = [];

time=[1,2,3];
genFirstPos = [1,3,2];
integrase = [1,0,0];
replication = [1,1,1];
death = [0,0,1];

data(:,1) = time;
data(:,2) = genFirstPos;
data(:,3) = integrase;
data(:,4) = replication;
data(:,5) = death;
S = 0.5; % size of a circle

for i = 1:length(time)

 if genFirstPos(i) > 2. 
    scatter(time,1,S,'MarkerFaceColor','red');
 elseif genFirstPos(i) < 3 && genFirstPos(i)>1
    scatter(time,1,S,'MarkerFaceColor','blue');
 else
    scatter(time,1,S,'MarkerFaceColor','green');
 end
